<Project Sdk="MSBuild.Sdk.Extras/3.0.23">

  <PropertyGroup>

    <!-- Target frameworks -->
    <TargetFramework>monoandroid11.0</TargetFramework>

    <!-- Version and Author -->
    <Version>1.0.0.0</Version>

    <!-- Assembly information -->
    <AssemblyName>Heirloom.Android</AssemblyName>
    <AssemblyFileVersion>$(Version)</AssemblyFileVersion>
    <AssemblyVersion>$(Version)</AssemblyVersion>
    <Product>$(AssemblyName) ($(TargetFramework))</Product>

    <!--Version of C# to use -->
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>Heirloom</RootNamespace>
    <LangVersion>preview</LangVersion>

    <!-- Generate Nuget Packages -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <IncludeSymbols>true</IncludeSymbols>
    <PackageOutputPath>../../Nuget/$(Configuration)</PackageOutputPath>
    <PackageId>$(AssemblyName)</PackageId>
    <PackageType></PackageType>

    <!-- Android Config -->
    <AndroidUseLatestPlatformSdk>false</AndroidUseLatestPlatformSdk>
    <TargetFrameworkVersion>v11.0</TargetFrameworkVersion>

  </PropertyGroup>

  <!-- DEBUG PROPERTIES -->
  <PropertyGroup Condition=" '$(Configuration)'=='Debug' ">
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>False</Optimize>
  </PropertyGroup>

  <!-- RELEASE PROPERTIES -->
  <PropertyGroup Condition=" '$(Configuration)'=='Release' ">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DebugSymbols>True</DebugSymbols>
    <DebugType>portable</DebugType>
    <Optimize>True</Optimize>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="libs\arm64-v8a\libdecoder.so" />
    <None Remove="libs\armeabi-v7a\libdecoder.so" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedNativeLibrary Include="libs\arm64-v8a\libdecoder.so" />
    <EmbeddedNativeLibrary Include="libs\armeabi-v7a\libdecoder.so" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Essentials" Version="1.6.0" />
  </ItemGroup>

</Project>