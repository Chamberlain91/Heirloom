<Project Sdk="MSBuild.Sdk.Extras/3.0.23">

  <PropertyGroup>

    <!-- Assembly Information -->
    <AssemblyName>Heirloom.Android</AssemblyName>

    <!-- Description -->
    <Description>Package containing native binaries for Heirloom to run on Android.</Description>

    <!-- Target frameworks -->
    <TargetFramework>monoandroid11.0</TargetFramework>

    <!-- Android Config -->
    <AndroidUseLatestPlatformSdk>false</AndroidUseLatestPlatformSdk>
    <TargetFrameworkVersion>v11.0</TargetFrameworkVersion>

  </PropertyGroup>

  <!-- Import standard project properties -->
  <Import Project="../../Heirloom.targets" />

  <ItemGroup>
    <None Remove="native/**"/>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedNativeLibrary Include="native\armeabi-v7a\libdecoder.so" Link="libs\armeabi-v7a\libdecoder.so" />
    <EmbeddedNativeLibrary Include="native\arm64-v8a\libdecoder.so" Link="libs\arm64-v8a\libdecoder.so" />
    <EmbeddedNativeLibrary Include="native\x86_64\libdecoder.so" Link="libs\x86_64\libdecoder.so" />
    <EmbeddedNativeLibrary Include="native\x86\libdecoder.so" Link="libs\x86\libdecoder.so" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Xamarin.Essentials" Version="1.6.0" />
  </ItemGroup>

</Project>