<Project Sdk="MSBuild.Sdk.Extras/3.0.23">

  <PropertyGroup>

    <!-- Assembly Information -->
    <AssemblyName>Heirloom.Desktop</AssemblyName>

    <!-- Description -->
    <Description>Package containing native binaries for Heirloom to run on Desktop (Windows and Linux).</Description>

    <!-- Target frameworks -->
    <TargetFramework>net5.0</TargetFramework>
    
  </PropertyGroup>

  <!-- Import standard project properties -->
  <Import Project="../../Heirloom.targets" />

  <ItemGroup>
    <None Remove="native/**"/>
  </ItemGroup>

  <ItemGroup>

    <!-- GLFW -->
    <Content Include="native/win-x64/glfw3.dll" PackagePath="runtimes/win-x64/native/" Link="glfw3.dll" Pack="true" CopyToOutputDirectory="PreserveNewest" Visible="false" />
    <Content Include="native/linux-x64/libglfw3.so" PackagePath="runtimes/linux-x64/native/" Link="libglfw3.so" Pack="true" CopyToOutputDirectory="PreserveNewest" Visible="false" />
    <Content Include="native/osx-x64/libglfw3.dylib" PackagePath="runtimes/osx-x64/native/" Link="libglfw3.dylib" Pack="true" CopyToOutputDirectory="PreserveNewest" Visible="false" />

    <!-- miniaudio -->
    <Content Include="native/win-x64/miniaudio.dll" PackagePath="runtimes/win-x64/native/" Link="miniaudio.dll" Pack="true" CopyToOutputDirectory="PreserveNewest" Visible="false" />
    <Content Include="native/linux-x64/libminiaudio.so" PackagePath="runtimes/linux-x64/native/" Link="libminiaudio.so" Pack="true" CopyToOutputDirectory="PreserveNewest" Visible="false" />
    <Content Include="native/osx-x64/libminiaudio.dylib" PackagePath="runtimes/osx-x64/native/" Link="libminiaudio.dylib" Pack="true" CopyToOutputDirectory="PreserveNewest" Visible="false" />

  </ItemGroup>

</Project>
