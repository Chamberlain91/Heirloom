<Project Sdk="MSBuild.Sdk.Extras/3.0.23">

  <PropertyGroup>
    <TargetFramework>monoandroid10.0</TargetFramework>

    <!-- Assembly and Namespace info -->
    <RootNamespace>Heirloom.Sound</RootNamespace>

    <!-- Version and Author -->
    <Version>1.0.0.0</Version>

    <!-- Assembly information -->
    <AssemblyName>Heirloom.Sound.Android</AssemblyName>
    <AssemblyFileVersion>$(Version)</AssemblyFileVersion>
    <AssemblyVersion>$(Version)</AssemblyVersion>
    <Product>$(AssemblyName) ($(TargetFramework))</Product>

    <!--Version of C# to use -->
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <LangVersion>preview</LangVersion>

    <!-- Generate Nuget Packages -->
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <IncludeSymbols>true</IncludeSymbols>
    <PackageOutputPath>../../Nuget/$(Configuration)</PackageOutputPath>
    <PackageId>Heirloom.Sound.Android</PackageId>

    <!-- Android Config -->
    <AndroidUseLatestPlatformSdk>true</AndroidUseLatestPlatformSdk>

  </PropertyGroup>

  <!-- DEBUG PROPERTIES -->
  <PropertyGroup Condition=" '$(Configuration)'=='Debug' ">
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>False</Optimize>
  </PropertyGroup>

  <!-- RELEASE PROPERTIES -->
  <PropertyGroup Condition=" '$(Configuration)'=='Release' ">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DebugSymbols>True</DebugSymbols>
    <DebugType>portable</DebugType>
    <Optimize>True</Optimize>
  </PropertyGroup>

  <ItemGroup>

    <!-- Includes Xamarin Android Rrapper -->
    <PackageReference Include="Xamarin.Essentials" Version="1.6.0" />

    <!-- Dr.Soft Mp3 Decoder -->
    <EmbeddedNativeLibrary Include="runtimes\armeabi-v7a\libdecoder.so" Link="libs\armeabi-v7a\libdecoder.so" Visible="false" />
    <EmbeddedNativeLibrary Include="runtimes\arm64-v8a\libdecoder.so" Link="libs\arm64-v8a\libdecoder.so" Visible="false" />
    <EmbeddedNativeLibrary Include="runtimes\x86_64\libdecoder.so" Link="libs\x86_64\libdecoder.so" Visible="false" />
    <EmbeddedNativeLibrary Include="runtimes\x86\libdecoder.so" Link="libs\x86\libdecoder.so" Visible="false" />

  </ItemGroup>

</Project>
