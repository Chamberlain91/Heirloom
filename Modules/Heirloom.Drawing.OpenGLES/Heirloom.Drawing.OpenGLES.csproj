<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Authors>Chris Chamberlain</Authors>
    <Version>1.0.0-alpha</Version>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageOutputPath>../../Nuget/$(Configuration)</PackageOutputPath>
    <RepositoryUrl>https://github.com/Chamberlain91/Heirloom</RepositoryUrl>
    <Description>An OpenGL implementation of Heirloom.Drawing.</Description>
    <PackageTags>opengl, drawing, 2D</PackageTags>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Embedded\blur.frag" />
    <None Remove="Embedded\invert.frag" />
    <None Remove="Embedded\shader.frag" />
    <None Remove="Embedded\shader.vert" />
    <None Remove="Embedded\standard\standard.frag" />
    <None Remove="Embedded\standard\standard.vert" />
    <None Include="..\..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Embedded\blur.frag" />
    <EmbeddedResource Include="Embedded\invert.frag" />
    <EmbeddedResource Include="Embedded\shader.frag" />
    <EmbeddedResource Include="Embedded\shader.vert" />
    <EmbeddedResource Include="Embedded\standard\standard.frag" />
    <EmbeddedResource Include="Embedded\standard\standard.vert" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Heirloom.Drawing\Heirloom.Drawing.csproj" />
    <ProjectReference Include="..\Heirloom.OpenGLES\Heirloom.OpenGLES.csproj" />
  </ItemGroup>

</Project>
