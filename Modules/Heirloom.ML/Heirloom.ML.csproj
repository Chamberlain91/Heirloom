<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Project Info -->
    <TargetFramework>netstandard2.1</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <RootNamespace>Heirloom.ML</RootNamespace>
    <!-- Package Info -->
    <Authors>Chris Chamberlain</Authors>
    <Version>1.0.3-beta</Version>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageOutputPath>../../Nuget/$(Configuration)</PackageOutputPath>
    <RepositoryUrl>https://github.com/Chamberlain91/Heirloom</RepositoryUrl>
    <Description>Implementation of some common machine learning or data science algorithms.</Description>
    <PackageTags>kmeans</PackageTags>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.md" Link="LICENSE.md">
      <PackagePath></PackagePath>
      <Pack>True</Pack>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Heirloom.Core" Version="1.0.3-beta" />
  </ItemGroup>

</Project>
