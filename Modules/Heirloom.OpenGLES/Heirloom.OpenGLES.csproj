<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- Project Info -->
    <TargetFramework>netstandard2.1</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <!-- Package Info -->
    <Authors>Chris Chamberlain</Authors>
    <Version>1.0.0-beta</Version>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageOutputPath>../../Nuget/$(Configuration)</PackageOutputPath>
    <RepositoryUrl>https://github.com/Chamberlain91/Heirloom</RepositoryUrl>
    <Description>An OpenGL implementation of Heirloom.Drawing.</Description>
    <PackageTags>opengl, drawing, 2D</PackageTags>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Heirloom.Core\Heirloom.Core.csproj" />
  </ItemGroup>

</Project>
