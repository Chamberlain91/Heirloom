<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.1.0-beta</Version>
    <Authors>Chris Chamberlain</Authors>
    <Company>Chris Chamberlain</Company>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageLicenseFile>LICENSE.md</PackageLicenseFile>
    <Description>Desktop infrastructure for Heirloom.Drawing applications.</Description>
    <RepositoryUrl>https://github.com/Chamberlain91/Heirloom</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>glfw, windows, graphics, desktop, drawing</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Modules\Heirloom.Drawing.OpenGL\Heirloom.Drawing.OpenGLES.csproj" />
    <ProjectReference Include="..\..\Wrappers\Heirloom.GLFW\Heirloom.GLFW.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE.md">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Content CopyToOutputDirectory="PreserveNewest" Include="runtimes/win-x64/glfw3.dll" Pack="true" PackagePath="runtimes/win-x64/native/" />
		<Content CopyToOutputDirectory="PreserveNewest" Include="runtimes/linux-x64/libglfw3.so" Pack="true" PackagePath="runtimes/linux-x64/native/" />
    <Content CopyToOutputDirectory="PreserveNewest" Include="runtimes/osx-x64/libglfw3.dylib" Pack="true" PackagePath="runtimes/osx-x64/native/" />
  </ItemGroup>

</Project>
